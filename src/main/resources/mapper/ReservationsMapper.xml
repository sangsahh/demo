<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ReservationsMapper">
    
    <select id="searchReservations" parameterType="com.example.demo.dto.request.ReservationSearchRequest" 
            resultType="com.example.demo.entity.Reservations">
        SELECT 
            reservation_id as reservationId,
            user_id as userId,
            room_id as roomId,
            seq_number as seqNumber,
            description,
            date,
            start_time as startTime,
            end_time as endTime,
            status,
            reason_rejected as reasonRejected
        FROM reservations
        <where>
            <if test="reservationId != null and reservationId != ''">
                AND reservation_id = #{reservationId}
            </if>
            <if test="userId != null and userId != ''">
                AND user_id = #{userId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="date != null">
                AND date = #{date}
            </if>
        </where>
    </select>
</mapper> 